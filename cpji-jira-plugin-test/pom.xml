<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>cpji-jira</artifactId>
        <groupId>com.atlassian.cpji</groupId>
        <version>2.1-SNAPSHOT</version>
    </parent>
    <artifactId>cpji-jira-plugin-test</artifactId>
    <name>Remote copying of issues - Integration Tests</name>
    <description>Tests for copying issues between remote JIRA instances</description>
    <dependencies>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>atlassian-jira-pageobjects</artifactId>
        </dependency>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>jira-webdriver-tests</artifactId>
        </dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.1.2</version>
			<scope>test</scope>
		</dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-amps-plugin</artifactId>
                <version>${amps.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <systemPropertyVariables>
                        <xvfb.enable>${xvfb.enable}</xvfb.enable>
                    </systemPropertyVariables>
                    <products>
                        <product>
                            <id>jira</id>
                            <instanceId>jira1</instanceId>
                            <version>${jira.version}</version>
                            <dataPath>${project.basedir}/src/test/amps/jira1-generated-test-resources.zip</dataPath>
                            <pluginArtifacts>
                                <pluginArtifact>
                                    <groupId>com.atlassian.cpji</groupId>
                                    <artifactId>cpji-jira-plugin</artifactId>
                                    <version>${project.version}</version>
                                </pluginArtifact>
								<pluginArtifact>
									<groupId>com.atlassian.jira.tests</groupId>
									<artifactId>jira-testkit-plugin</artifactId>
									<version>${testkit.version}</version>
								</pluginArtifact>
                            </pluginArtifacts>
                        </product>
                        <product>
                            <id>jira</id>
                            <instanceId>jira2</instanceId>
                            <version>${jira.version}</version>
                            <httpPort>2991</httpPort>
                            <dataPath>${project.basedir}/src/test/amps/jira2-generated-test-resources.zip</dataPath>
                            <pluginArtifacts>
                                <pluginArtifact>
                                    <groupId>com.atlassian.cpji</groupId>
                                    <artifactId>cpji-jira-plugin</artifactId>
                                    <version>${project.version}</version>
                                </pluginArtifact>
								<pluginArtifact>
									<groupId>com.atlassian.jira.tests</groupId>
									<artifactId>jira-testkit-plugin</artifactId>
									<version>${testkit.version}</version>
								</pluginArtifact>
                            </pluginArtifacts>
                        </product>
                    </products>
                    <testGroups>
                        <testGroup>
                            <id>jira-tests</id>
                            <productIds>
                                <productId>jira1</productId>
                                <productId>jira2</productId>
                            </productIds>
                            <includes>
                                <include>it/**</include>
                            </includes>
                        </testGroup>
                    </testGroups>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>it/**/*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <!-- Whether the tests should be run detached from the current screen -->
        <xvfb.enable>true</xvfb.enable>
		<tested-plugin.jar>${basedir}/../cpji-jira-plugin/target/cpji-jira-plugin-${project.version}.jar</tested-plugin.jar>
    </properties>
	<profiles>
		<profile>
			<id>artifact-passing</id>
			<activation>
				<file>
					<exists>PassedArtifacts/cpji-jira-plugin-${project.version}.jar</exists>
				</file>
			</activation>
			<properties>
				<tested-plugin.jar>${basedir}/PassedArtifacts/cpji-jira-plugin-${project.version}.jar</tested-plugin.jar>
			</properties>
		</profile>
		<profile>
			<id>use-tested-plugin-from-local-file</id>
			<activation>
				<file>
					<exists>${tested-plugin.jar}</exists>
				</file>
			</activation>
			<dependencies>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<artifactId>cpji-jira-plugin</artifactId>
					<version>${project.version}</version>
					<scope>system</scope>
					<systemPath>${tested-plugin.jar}</systemPath>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>use-tested-plugin-from-repository</id>
			<dependencies>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<artifactId>cpji-jira-plugin</artifactId>
					<version>${project.version}</version>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>
