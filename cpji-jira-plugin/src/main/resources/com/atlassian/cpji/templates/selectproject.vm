#* @vtlvariable name="action" type="com.atlassian.cpji.action.SelectTargetProjectAction" *#
<html>
<head>
    <title>Select a target remote project</title>
</head>
<body>
<div id="stepped-process" class="content-container">
    <div class="content-related">
        <ol class="steps">
            <li class="current">Select project</li>
            <li class="todo">Select Issue Type</li>
            <li class="todo">Confirmation</li>
        </ol>
    </div>
    <div class="content-body aui-panel">
        <form action="SelectTargetProjectAction.jspa" class="aui" method="post">
            <h2>$i18n.getText('cpji.select.destination.project')</h2>
            <fieldset>
				<div class="field-group">
					<label for="targetEntityLink">$i18n.getText('common.words.project')</label>
					<div style="width: 250px;"><select name="targetEntityLink" id="targetEntityLink" class="hidden"></select></div>
                    <span id="targetEntityLinkLoader" class="icon loading hidden"></span>
				</div>
            </fieldset>
            <div class="button-container">
                <div class="buttons">
                    <input type="submit" value="Next" class="button submit"/>
                </div>
            </div>
            <input type="hidden" name="id" value="$action.getId()"/>
            <input type="hidden" name="atl_token" value="$action.getXsrfToken()"/>
        </form>
    </div>
</div>
</body>
</html>
